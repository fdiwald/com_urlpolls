<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2" method="upgrade">
	<name>COM_URLPOLLS</name>
	<creationDate>30th Dezember, 2020</creationDate>
	<author>Florian Diwald</author>
	<authorEmail>florian@diwald.net</authorEmail>
	<authorUrl>https://github.com/fdiwald/com_urlpolls</authorUrl>
	<copyright>Copyright (C) 2020. All Rights Reserved</copyright>
	<license>GNU/GPL Version 2 or later - http://www.gnu.org/licenses/gpl-2.0.html</license>
	<version>1.0.0</version>
	<description><![CDATA[
		<h1>URL Polls (v.1.0.0)</h1>
		<div style="clear: both;"></div>
		<p>Send mails with an invitation to an event to your friends. Include personalized links for accepting and rejecting. The URLs for the links are generated by this component. When your friend receives the mail and clicks one of the links, his decision will be saved in the joomla database. You can now view the results and plan your event.</p>
		<p>Created by <a href="https://github.com/fdiwald/com_urlpolls" target="_blank">Florian Diwald</a><br /><small>Development started 26th Dezember, 2020</small></p>
	]]></description>

	<!-- Runs on install; New in Joomla 1.5 -->
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>

	<!-- Runs on uninstall; New in Joomla 1.5 -->
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

	<!-- Runs on install/uninstall/update; New in Joomla 2.5 -->
	<scriptfile>script.php</scriptfile>

	<media destination="com_urlpolls" folder="media">
		<filename>index.html</filename>
		<folder>js</folder>
		<folder>css</folder>
		<folder>images</folder>
	</media>

	<!-- Update Schema; New in Joomla 2.5 -->
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql/</schemapath>
		</schemas>
	</update>

	<files folder="site">
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<filename>router.php</filename>
		<filename>urlpolls.php</filename>
		<filename>router.php</filename>
		<folder>assets</folder>
		<folder>helpers</folder>
		<folder>controllers</folder>
		<folder>models</folder>
		<folder>views</folder>
		<folder>layouts</folder>
	</files>

	<languages folder="site">
		<language tag="en-GB">language/en-GB/en-GB.com_urlpolls.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.com_urlpolls.sys.ini</language>
		<language tag="de-DE">language/de-DE/de-DE.com_urlpolls.ini</language>
		<language tag="de-DE">language/de-DE/de-DE.com_urlpolls.sys.ini</language>
	</languages>

	<administration>
		<menu>COM_URLPOLLS_MENU</menu>
		<submenu>
			<!-- Instead of link you can specify individual link attributes -->
			<menu option="com_urlpolls" view="persons">COM_URLPOLLS_MENU_PERSONS</menu>
			<menu option="com_urlpolls" view="polls">COM_URLPOLLS_MENU_POLLS</menu>
			<menu option="com_urlpolls" view="recipients">COM_URLPOLLS_MENU_RECIPIENTS</menu>
		</submenu>
		<files folder="admin">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>urlpolls.php</filename>
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<folder>layouts</folder>
		</files>

		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_urlpolls.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_urlpolls.sys.ini</language>
			<language tag="de-DE">language/de-DE/de-DE.com_urlpolls.ini</language>
			<language tag="de-DE">language/de-DE/de-DE.com_urlpolls.sys.ini</language>
		</languages>

	</administration>
</extension>